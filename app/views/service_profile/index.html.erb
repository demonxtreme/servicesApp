<h1>Services List</h1>

<%=@userServices.ids %>

<table>
  <thead>
  <tr>
    <th>User id</th>
    <th>Service id</th>
    <th>Name</th>
    <th>Service type</th>
    <th>Description</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @userServices.each do |service| %>
      <tr>
        <td><%= service.user_id %></td>
        <td><%= service.id %></td>
        <td><%= service.name %></td>
        <td><%= service.service_type %></td>
        <td><%= service.description %></td>
        <td><%= service.latitude %></td>
        <td><%= service.longitude %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to "Profile", controller: "profile", action: "show", id: service.id %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Create a service" ,controller: "profile" %>
