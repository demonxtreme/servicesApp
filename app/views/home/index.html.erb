<h1>Home#index</h1>

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
<div class="row">

  <div class="input-group">

    <label for="locationTextField" class="col-xs-1 col-md-1">Location</label>
    <input id="locationTextField" class="form-control col-md-4" placeholder="hehe" aria-describedby="basic-addon2" type="text" size="50">
  </div>

  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <%= button_to "Search!", services_location_path, {method: :get, form_class: "btn btn-default"}%>
      </span>
    </div><!-- /input-group -->
  </div>
</div>
<script>
  $( document ).ready(init() );
  // Handler for .ready() called
  function init() {
    var input = document.getElementById('locationTextField');
    var autocomplete = new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', init);
</script>
